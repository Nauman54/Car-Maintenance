<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCar"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/black"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/AddCar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Car"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="italic"
            android:textAllCaps="true"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/car_icon"
            />

        <EditText
            android:id="@+id/AddCar_Name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_icon"
            android:layout_marginLeft="40dp"
            android:hint="Name"
            android:layout_marginTop="25dp"/>

        <EditText
            android:id="@+id/AddCar_LicensePlate"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/AddCar_Name"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:hint="License Plate"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/AddCar_Brand"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/AddCar_LicensePlate"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:hint="Brand"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/AddCar_Model"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/AddCar_Brand"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:hint="Model"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/AddCar_Year"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/AddCar_Model"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:hint="Year"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/AddCar_btn_Add"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@id/AddCar_Year"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:text="ADD"
            android:textSize="30dp"
            android:textAllCaps="true"
            android:textStyle="italic"/>

    </RelativeLayout>

</LinearLayout>